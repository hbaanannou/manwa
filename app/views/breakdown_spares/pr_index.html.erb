      <span class="m-badge m-badge--danger"><%= @breakdown_spares_by_spare_status_5.count %></span>
      <% end %>
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#m_tabs_10_6">
