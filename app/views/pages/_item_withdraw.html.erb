<div class="m-widget5__item">
	<div class="m-widget5__pic">
		<% if DataAsset.find(withdraw_asset.data_asset_id).images.attached? %>
		<%= image_tag DataAsset.find(withdraw_asset.data_asset_id).images.first.variant(resize: "120x80"), alt: "", class: "m-widget7__img" %>

		<% else %>
    	<%= image_tag "no-image_120_90.jpg", alt: "", class: "img-fluid" %>
    <% end %>

	</div>
	<div class="m-widget5__content">
		<h4 class="m-widget5__title">

			<strong><span class="m--font-brand"><%= DataAsset.find(withdraw_asset.data_asset_id).data_asset_serial %> </span></strong>
        / <%= DataAsset.find(withdraw_asset.data_asset_id).type_asset.type_asset_name %> 
        / <%= DataAsset.find(withdraw_asset.data_asset_id).model_asset.model_asset_name %> 

		</h4>
		<div class="m-widget5__info">
			<span class="m-widget5__author">
				From:
			</span>
			<span class="m-widget5__info-date m--font-info">
				<%= withdraw_asset.site_asset_from.site_asset_name %>
			</span>
			<br>
			<span class="m-widget5__info-label">
				To:
			</span>
			<span class="m-widget5__info-date m--font-info">
				<%= withdraw_asset.site_asset_to.site_asset_name %>
			</span>
		</div>
	</div>

	<div class="m-widget5__stats1">
		<span class="m-widget5__sales m--font-brand">
			<span class="m--font-primary"><strong><%= local_assigns[:withdraw_status].capitalize %></strong></span> from
		</span>
		<br>
		<span class="m-widget5__sales">
			<%= time_ago_in_words(withdraw_asset.created_at) %>
		</span>
		<br>
		<span class="m-widget5__desc">
			<span class="m-widget5__sales m--font-brand">on: </span>
			<%= withdraw_asset.created_at.to_date %>
		</span>
	</div>

	<div class="m-widget5__stats1">
		<%= link_to withdraw_asset_path(withdraw_asset, asset_id: DataAsset.find(withdraw_asset.data_asset_id).id), alt: "Show", class: "m-portlet__nav-link btn m-btn m-btn--hover-brand m-btn--icon m-btn--icon-only m-btn--pill", data: { toggle: "m-tooltip", placement: "bottom", original_title: "Show"} do %><i class="la la-ellipsis-h"></i><% end %>

		<%= link_to withdraw_asset_path(withdraw_asset, format: :pdf, asset_id: DataAsset.find(withdraw_asset.data_asset_id).id), alt: "PDF", class: "m-portlet__nav-link btn m-btn m-btn--hover-danger m-btn--icon m-btn--icon-only m-btn--pill", target: "_blank", data: { toggle: "m-tooltip", placement: "bottom", original_title: "PDF"} do %><i class="la la-file-pdf-o"></i><% end %>

		<% if local_assigns[:can_edit] %>
			<%= link_to edit_withdraw_asset_path(withdraw_asset, asset_id: DataAsset.find(withdraw_asset.data_asset_id).id), alt: "Edit", class: "m-portlet__nav-link btn m-btn m-btn--hover-accent m-btn--icon m-btn--icon-only m-btn--pill", data: { toggle: "m-tooltip", placement: "bottom", original_title: "Edit"} do %><i class="la la-edit"></i><% end %>
		<% end %>

	</div>

</div>