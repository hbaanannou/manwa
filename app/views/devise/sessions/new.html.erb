<div class="m-login__head">
  <h3 class="m-login__title">
    MANWA Equipments App
  </h3>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "m-login__form m-form"}) do |f| %>
  <div class="form-group m-form__group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control m-input", placeholder: "Email" %>
  </div>
  <div class="form-group m-form__group">
    <%= f.password_field :password, autocomplete: "off", class: "form-control m-input m-login__form-input--last", placeholder: "Password" %>
  </div>
  <div class="row m-login__form-sub">
    <% if devise_mapping.rememberable? -%>
      <div class="col m--align-left m-login__form-left">
        <label class="m-checkbox  m-checkbox--focus">
          <%= f.check_box :remember_me %>
          Remember me
          <span></span>
        </label>
      </div>
    <% end -%>
    <div class="col m--align-right m-login__form-right">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot Password?", new_password_path(resource_name), class: "m-link" %><br />
      <% end -%>
    </div>
  </div>
  <div class="m-login__form-action">
    <%= f.submit "Sign In", class: "btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--primary" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<div class="m-login__account">
  <span class="m-login__account-msg">
    Don't have an account yet ?
  </span>
  &nbsp;&nbsp;
  <%= link_to "Sign Up", new_registration_path(resource_name), class: "m-link m-link--light m-login__account-link" %>
</div>
<% end -%>



