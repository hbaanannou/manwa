<div class="m-login__head">
  <h3 class="m-login__title">
    Sign Up
  </h3>
  <div class="m-login__desc">
    Enter your details to create your account:
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "m-login__form m-form"}) do |f| %>
  <span class="m--font-danger"><%= devise_error_messages! %></span>

  <div class="form-group m-form__group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control m-input", placeholder: "Email" %>
  </div>
  <div class="form-group m-form__group">
    <%= f.password_field :password, autocomplete: "off", class: "form-control m-input", placeholder: "Password" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>
  <div class="form-group m-form__group">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control m-input m-login__form-input--last", placeholder: "Confirm Password" %>
  </div>

  <div class="m-login__form-action">
    <%= f.submit "Sign Up", class: "btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn" %>
    &nbsp;&nbsp;&nbsp;
    <%- if controller_name != 'sessions' %>
      <%= link_to "Cancel", new_session_path(resource_name), class: "btn btn-outline-focus m-btn m-btn--pill m-btn--custom m-login__btn"  %><br />
    <% end -%>
  </div>
<% end %>