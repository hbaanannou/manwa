<div class="m-login__head">
  <h3 class="m-login__title">
    Forgotten Password ?
  </h3>
  <div class="m-login__desc">
    Enter your email to reset your password:
  </div>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "m-login__form m-form" }) do |f| %>
  <span class="m--font-danger"><%= devise_error_messages! %></span>

  <div class="form-group m-form__group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control m-input", placeholder: "Email" %>
  </div>
  <div class="m-login__form-action">
    <%= f.submit "Send password", class: "btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn m-login__btn--primaryr" %>
    &nbsp;&nbsp;&nbsp;
    <%- if controller_name != 'sessions' %>
      <%= link_to "Cancel", new_session_path(resource_name), class: "btn btn-outline-focus m-btn m-btn--pill m-btn--custom m-login__btn"  %><br />
    <% end -%>

  </div>
<% end %>

