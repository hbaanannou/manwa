<div class="m-portlet__head">
  <div class="m-portlet__head-caption">
    <div class="m-portlet__head-title">
      <span class="m-portlet__head-icon">
        <i class="flaticon-truck m--font-brand"></i>
      </span>
      <h3 class="m-portlet__head-text">
        Tank Fuel
      </h3>
    </div>
  </div>
  <div class="m-portlet__head-tools">
    <ul class="m-portlet__nav">


      <li class="m-portlet__nav-item" id="clear_filters">
        <% if params[:q] %>
          <%= link_to request.path, class: "btn m-btn m-btn--pill m-btn--air btn-info mr-4" do %>
            <span>
              <i class="la la-filter"></i>
              <span>
                Clear Filters
              </span>
            </span>
          <% end %>
        <% end %>
      </li>

      <li class="m-portlet__nav-item">
        <%= link_to tank_fueldays_path(q: request.parameters[:q],format: :pdf), class: "btn m-btn m-btn--icon m-btn--pill m-btn--air btn-danger", target: "_blank" do %>
          <span>
            <i class="la la-file"></i>
            <span>
              Create PDF document
            </span>
          </span>
        <% end %>
      </li>

    </ul>
  </div>
</div>

<!--Begin::m-portlet__body-->
<div class="m-portlet__body">
<div class="mb-5 pb-2">
  <div class="digg_pagination m--pull-left">
    <span class="page_info">
      <%= page_entries_info @tank_fueldays, model: 'tank' %>
    </span>
  </div>
  <div class="digg_pagination m--pull-right">
    <%= will_paginate @tank_fueldays, :container => false %>
  </div>
</div>

<!--Begin::Section-->
<div class="m-section">
  <div class="m-section__content">
    <div class="table-responsive">
    <table class="table m-table m-table--border-success m-table--head-bg-success table-bordered table-hover text-center">
      <thead>
      <tr>
        <th>#Serial</th>
        <th>Day</th>
        <th>Tank Number</th>
        <th>Project</th>
        <th>Employee</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% if @tank_fueldays.any? %>
        <% @tank_fueldays.each do |tank_fuelday| %>
          <tr>

            <td>#F <%= tank_fuelday.id %></td>

            <td><%= tank_fuelday.day %></td>

            <td><%= tank_fuelday.data_asset.data_asset_serial %></td>

            <td><%= tank_fuelday.site_asset.site_asset_name %></td>

            <td><%= tank_fuelday.employee.employee_name %></td>

            <td class="text-center"><%= tank_fuelday.asset_fueldays.sum(:quantity) %></td>

            <td>
              <%= link_to asset_fueldays_path(tank_id: tank_fuelday.id), alt: "Details", class: "m-portlet__nav-link btn m-btn m-btn--hover-brand m-btn--icon m-btn--icon-only m-btn--pill", data: { toggle: "m-tooltip", placement: "bottom", original_title: "Details"} do %><i class="la la-angle-double-right"></i><% end %>

              <%= link_to edit_tank_fuelday_path(tank_fuelday), alt: "Edit", class: "m-portlet__nav-link btn m-btn m-btn--hover-accent m-btn--icon m-btn--icon-only m-btn--pill", data: { toggle: "m-tooltip", placement: "bottom", original_title: "Edit" } do %><i class="la la-edit"></i><% end %>

              <% if current_user.role?(:assets_admin) || current_user.role?(:workshops_manager) %>
                <%= link_to tank_fuelday, alt: "Delete", class: "m-portlet__nav-link btn m-btn m-btn--hover-danger m-btn--icon m-btn--icon-only m-btn--pill", method: :delete, data: { toggle: "m-tooltip", placement: "bottom", original_title: "Delete", confirm: 'Are you sure?' } do %><i class="la la-trash"></i><% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <th scope="row" class="text-center" colspan="12">No Tank Fuel Data</th>
        </tr>
      <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
<!--End::Section-->

<div class="mb-3 pb-3">
  <div class="digg_pagination">
    <span class="page_info_red">
    <% total = 0 %>
    <% @tank_fueldays.each do |tank_fuelday| %>
    <% total += tank_fuelday.asset_fueldays.sum(:quantity) %>
    <% end %>
    Total: <b>( <%= total %> )</b>
    </span>
  </div>

  <div class="digg_pagination m--pull-left">
    <span class="page_info">
      <%= page_entries_info @tank_fueldays, model: 'tank' %>
    </span>
  </div>
  <div class="digg_pagination m--pull-right">
    <%= will_paginate @tank_fueldays, :container => false %>
  </div>
</div>
</div>
<!--End::m-portlet__body-->