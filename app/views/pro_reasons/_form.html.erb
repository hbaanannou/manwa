<!--begin::Form-->
<%= form_with(model: pro_reason, local: true, class: "m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed") do |form| %>

  <%= render 'layouts/myform/error_myform', object: pro_reason %>

  <div class="form-group m-form__group row">
    <%= form.label :pro_reason_name, "Area Name", class: "col-lg-2 col-form-label" %>
    <div class="col-lg-3">
      <%= form.text_field :pro_reason_name, class: "form-control m-input", placeholder: "Area Name", required: true %>
      <span class="m-form__help">Please enter Reason Name</span>
    </div>
  </div>


  <%= render 'layouts/myform/submit_myform', form: form, cancelpath: pro_reasons_path %>

<% end %>
<!--end::Form-->