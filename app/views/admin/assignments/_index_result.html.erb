<div class="m-portlet__head">
  <div class="m-portlet__head-caption">
    <div class="m-portlet__head-title">
      <span class="m-portlet__head-icon">
        <i class="flaticon-truck m--font-brand"></i>
      </span>
      <h3 class="m-portlet__head-text">
        Assignments
      </h3>
    </div>
  </div>
  <div class="m-portlet__head-tools">
    <ul class="m-portlet__nav">


      <li class="m-portlet__nav-item" id="clear_filters">
        <% if params[:q] %>
          <%= link_to request.path, class: "btn m-btn m-btn--pill m-btn--air btn-info mr-4" do %>
            <span>
              <i class="la la-filter"></i>
              <span>
                Clear Filters
              </span>
            </span>
          <% end %>
        <% end %>
      </li>


      <li class="m-portlet__nav-item">
        <%= link_to new_admin_assignment_path, class: "btn m-btn m-btn--icon m-btn--pill m-btn--air btn-success" do %>
          <span>
            <i class="la la-plus"></i>
            <span>
              Add Assignment
            </span>
          </span>
        <% end %>
      </li>


    </ul>
  </div>
</div>

<!--Begin::m-portlet__body-->
<div class="m-portlet__body">
<div class="mb-5 pb-2">
  <div class="digg_pagination m--pull-left">
    <span class="page_info">
      <%= page_entries_info @assignments, model: 'assignment' %>
    </span>
  </div>
  <div class="digg_pagination m--pull-right">
    <%= will_paginate @assignments, :container => false %>
  </div>
</div>

<!--Begin::Section-->
<div class="m-section">
  <div class="m-section__content">
    <div class="table-responsive">
    <table class="table m-table m-table--border-success m-table--head-bg-success table-bordered table-hover text-center">


<thead>
    <tr>
      <th>User</th>
      <th>Role</th>
      <th>Employee</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
  <% if @assignments.any? %>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.user.email %></td>
        <td><%= assignment.role.role_name %></td>
        <td><%= assignment.employee.employee_name %></td>
        <td><%= link_to assignment, alt: "Show", class: "m-portlet__nav-link btn m-btn m-btn--hover-brand m-btn--icon m-btn--icon-only m-btn--pill", data: { toggle: "m-tooltip", placement: "bottom", original_title: "Show"} do %><i class="la la-ellipsis-h"></i><% end %>

        <%= link_to edit_admin_assignment_path(assignment), alt: "Edit", class: "m-portlet__nav-link btn m-btn m-btn--hover-accent m-btn--icon m-btn--icon-only m-btn--pill", data: { toggle: "m-tooltip", placement: "bottom", original_title: "Edit" } do %><i class="la la-edit"></i><% end %>

        <% if current_user.role?(:assets_admin) %>
          <%= link_to assignment, alt: "Delete", class: "m-portlet__nav-link btn m-btn m-btn--hover-danger m-btn--icon m-btn--icon-only m-btn--pill", method: :delete, data: { toggle: "m-tooltip", placement: "bottom", original_title: "Delete", confirm: 'Are you sure?' } do %><i class="la la-trash"></i><% end %>
        <% end %>
      </td>

  <% end %>
<% else %>
  <tr>
    <th scope="row" class="text-center" colspan="12">No Assignments</th>
  </tr>
<% end %>
</tbody>





    </table>
    </div>
  </div>
</div>
<!--End::Section-->

<div class="mb-3 pb-3">
  <div class="digg_pagination m--pull-left">
    <span class="page_info">
      <%= page_entries_info @assignments, model: 'assignment' %>
    </span>
  </div>
  <div class="digg_pagination m--pull-right">
    <%= will_paginate @assignments, :container => false %>
  </div>
</div>
</div>
<!--End::m-portlet__body-->