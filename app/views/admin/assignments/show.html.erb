<%= render 'layouts/myshow/before_myshow', mytitle: "Assignment" %>

<div class="m-widget13__item">
    <span class="m-widget13__desc m--align-right">
      User Email
    </span>
  <span class="m-widget13__text m-widget13__text-bolder">
      <%= @assignment.user.email %>
    </span>
</div>
<div class="m-widget13__item">
    <span class="m-widget13__desc m--align-right">
      Role Name
    </span>
  <span class="m-widget13__text m-widget13__text-bolder">
      <%= @assignment.role.role_name %>
    </span>
</div>
<div class="m-widget13__item">
    <span class="m-widget13__desc m--align-right">
      Employee Name
    </span>
  <span class="m-widget13__text m-widget13__text-bolder">
      <%= @assignment.employee.employee_name %>
    </span>
</div>

<%= render 'layouts/myshow/after_myshow', mytitle: "Assignment", editpath: edit_admin_assignment_path(@assignment), backpath: admin_assignments_path %>