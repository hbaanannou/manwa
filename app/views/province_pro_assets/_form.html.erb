<!--begin::Form-->
<%= form_with(model: province_pro_asset, local: true, class: "m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed") do |form| %>

  <%= render 'layouts/myform/error_myform', object: province_pro_asset %>

  <div class="form-group m-form__group row">
    <%= form.label :province_pro_asset_name, "province Name", class: "col-lg-2 col-form-label" %>
    <div class="col-lg-3">
      <%= form.text_field :province_pro_asset_name, class: "form-control m-input", placeholder: "province Name", required: true %>
      <span class="m-form__help">Please enter province Name</span>
    </div>
    <%= form.label :area_asset_id, "Asset area", class: "col-lg-2 col-form-label" %>
    <div class="col-lg-3">
      <%= form.select :area_pro_asset_id, AreaProAsset.all.collect {|p| [p.area_pro_asset_name, p.id]}, {include_blank: 'Select Asset Area'}, class: "form-control m-input m-select2", required: true %>
      <span class="m-form__help">Please enter Asset Area</span>
    </div>
  </div>

  <div class="form-group m-form__group row">
    <%= form.label :user_id, "province Manager", class: "col-lg-2 col-form-label" %>
    <div class="col-lg-3">
      <%= form.select :user_id, Admin::User.all.collect {|p| [p.email, p.id]}, {include_blank: 'Select province Manager'}, class: "form-control m-input m-select2", required: true %>
      <span class="m-form__help">Please enter province Manager</span>
    </div>
  </div>

  <div class="form-group m-form__group row">
      <div class="col-12 text-center">
        <div class="m-checkbox-inline">

          <label class="m-checkbox">
          <%= form.check_box :concrete %> Concrete
          <span></span>
          </label>

          <label class="m-checkbox">
          <%= form.check_box :asphalt %> Asphalt
          <span></span>
          </label>

          <label class="m-checkbox">
          <%= form.check_box :crusher %> Crusher
          <span></span>
          </label>

          </div>
      </div>
    </div>


  <%= render 'layouts/myform/submit_myform', form: form, cancelpath: province_pro_assets_path %>

<% end %>
<!--end::Form-->