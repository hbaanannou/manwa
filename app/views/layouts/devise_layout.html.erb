<!DOCTYPE html>
<html>
  <head>
  	<meta charset="utf-8" />
    <title>Manwa</title>
    <%= csrf_meta_tags %>

    <%= render 'layouts/meta' %>

    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>

  <body class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">


  <% if notice %>
    <%= javascript_tag do %>
      toastr.success("<%= notice %>", "Notice:");
    <% end %>
  <% elsif alert %>
    <%= javascript_tag do %>
      toastr.error("<%= alert %>", "Alert:");
    <% end %>
  <% end %>



  <!-- Begin::Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page">

			<div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-2" id="m_login" style="background-image: url(<%= image_path('bg-3.jpg') %>);">
				<div class="m-grid__item m-grid__item--fluid	m-login__wrapper">
					<div class="m-login__container">
						<div class="m-login__logo">
							<%= image_tag "logo.png", alt: "Manwa" %>
						</div>

            <%= yield %>

					</div>
				</div>
			</div>



    </div>  
    <!-- End::Page -->



  </body>
</html>

