<div class="m-portlet__head-caption">
  <div class="m-portlet__head-title">
    <h3 class="m-portlet__head-text">
      <% if params[:asph_chart_display] == 'asph_details' %>
        <strong>Asphalt Report - ( <%= AreaProAsset.find(params[:area_id]).area_pro_asset_name %> ) - Details:</strong>
      <% else %>
        <strong>Asphalt Report - ( <%= AreaProAsset.find(params[:area_id]).area_pro_asset_name %> ) - Summary:</strong>
      <% end %>
    </h3>
  </div>
</div>
<div class="m-portlet__head-tools">
  <ul class="m-portlet__nav">

    <li class="m-portlet__nav-item">
      <% if params[:asph_chart_display] == 'asph_details' %>
        <%= link_to asph_area_pro_lines_area_pro_assets_path(asph_chart_display: 'asph_summary', area_id:params[:area_id], start_date: params[:start_date], end_date: params[:end_date]), remote: true, class: "btn m-btn m-btn--icon m-btn--pill m-btn--air btn-info" do %>
          <span>
            <i class="la la-minus"></i>
            <span>
              <strong>Summary - Chart</strong>
            </span>
          </span>
        <% end %>
      <% else %>
        <%= link_to asph_area_pro_lines_area_pro_assets_path(asph_chart_display: 'asph_details', area_id:params[:area_id], start_date: params[:start_date], end_date: params[:end_date]), remote: true, class: "btn m-btn m-btn--icon m-btn--pill m-btn--air btn-brand" do %>
        <span>
          <i class="la la-bars"></i>
          <span>
            <strong>Details - Chart</strong>
          </span>
        </span>
      <% end %>
      <% end %>
    </li>

  </ul>
</div>
