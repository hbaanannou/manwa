<!--begin::Form-->
<%= form_with(model: province_asset, local: true, class: "m-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed") do |form| %>

  <%= render 'layouts/myform/error_myform', object: province_asset %>

  <div class="form-group m-form__group row">
    <%= form.label :province_asset_name, "province Name", class: "col-lg-2 col-form-label" %>
    <div class="col-lg-3">
      <%= form.text_field :province_asset_name, class: "form-control m-input", placeholder: "province Name", required: true %>
      <span class="m-form__help">Please enter province Name</span>
    </div>
    <%= form.label :area_asset_id, "Asset area", class: "col-lg-2 col-form-label" %>
    <div class="col-lg-3">
      <%= form.select :area_asset_id, AreaAsset.all.collect {|p| [p.area_asset_name, p.id]}, {include_blank: 'Select Asset Area'}, class: "form-control m-input m-select2", required: true %>
      <span class="m-form__help">Please enter Asset Area</span>
    </div>
  </div>

  <div class="form-group m-form__group row">
    <%= form.label :user_id, "province Manager", class: "col-lg-2 col-form-label" %>
    <div class="col-lg-3">
      <%= form.select :user_id, Admin::User.all.collect {|p| [p.email, p.id]}, {include_blank: 'Select province Manager'}, class: "form-control m-input m-select2", required: true %>
      <span class="m-form__help">Please enter province Manager</span>
    </div>
  </div>


  <%= render 'layouts/myform/submit_myform', form: form, cancelpath: province_assets_path %>

<% end %>
<!--end::Form-->